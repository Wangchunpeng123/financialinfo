<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.WoXiaoxiXitongActivity">
    <ImageView
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:scaleType="centerInside"
        android:id="@+id/rv_xitong_head"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/dp_10"
        />

    <TextView
        android:id="@+id/rv_xitong_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:text="用户"
        android:textColor="@color/cengse"
        app:layout_constraintLeft_toRightOf="@+id/rv_xitong_head"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38"
        />

    <TextView
        android:id="@+id/rv_xitong_dongzuo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="点赞了你的动态"
        android:textSize="@dimen/sp_10"
        app:layout_constraintLeft_toRightOf="@+id/rv_xitong_head"
        app:layout_constraintTop_toBottomOf="@+id/rv_xitong_name"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_marginBottom="@dimen/dp_5"
        />

    <TextView
        android:id="@+id/rv_xitong_tv"
        android:layout_width="@dimen/dp_150"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@mipmap/botton_denglu"
        android:padding="@dimen/dp_10"
        android:text="1111111111111"
        android:maxLines="3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:background="@drawable/bg_dotted_line"
        app:layout_constraintTop_toBottomOf="@+id/rv_xitong_tv"
        android:layout_marginTop="@dimen/dp_5"
        />
</androidx.constraintlayout.widget.ConstraintLayout>