<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/hangyefengbao_main_bg"
   >

    <ImageView
        android:id="@+id/hangye_rv_head"
        android:layout_width="@dimen/dp_75"
        android:layout_height="@dimen/dp_75"
        android:src="@mipmap/hangyefengbao_main_pic_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_23"
        android:layout_marginBottom="@dimen/dp_23"
        android:layout_marginLeft="@dimen/dp_15"
         />

    <TextView
        android:id="@+id/hangye_rv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="法国竞争事务监察总署3月16日向苹果公司开出亿欧元巨额罚单，究竟为何？"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15"
        app:layout_constraintLeft_toRightOf="@+id/hangye_rv_head"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_21"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_16"
        />

    <TextView
        android:id="@+id/hangyefengbao_caijingribao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="财经日报"
        android:textColor="@color/blue"
        android:textSize="@dimen/sp_13"
        app:layout_constraintLeft_toRightOf="@+id/hangye_rv_head"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hangye_rv_content"
        android:layout_marginBottom="@dimen/dp_17"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_14"
       />

    <TextView
        android:id="@+id/hangyefengbao_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="04.14  09:31"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/sp_13"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hangye_rv_content"
        android:layout_marginBottom="@dimen/dp_17"
        android:layout_marginRight="@dimen/dp_19"
        android:layout_marginTop="@dimen/dp_14"
        />
</androidx.constraintlayout.widget.ConstraintLayout>