<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/titleWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/titleWhite"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/caijing_head_iv"
            android:scaleType="fitXY"
            android:src="@mipmap/caijingshuju_top_bg"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/content_jiantou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/hangyefengbao_icon_jiantou"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:padding="@dimen/dp_10"/>

        <TextView
            android:id="@+id/content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_22"
            android:text="评论"
            android:textColor="@color/titleWhite"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    <FrameLayout
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:id="@+id/remen_head"
        app:layout_constraintTop_toBottomOf="@id/caijing_head_iv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_marginLeft="@dimen/dp_10"
        >

        <ImageView
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:scaleType="fitXY"
            android:id="@+id/remen_touxiang"
            />
        <ImageView
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:scaleType="fitXY"
            android:src="@mipmap/shequ_icon_touxiang_bg"
            />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/remen_name"
        android:text="区块链币姐"
        android:textColor="@color/cengse_remen"
        android:textSize="@dimen/sp_15"
        app:layout_constraintTop_toBottomOf="@id/caijing_head_iv"
        app:layout_constraintLeft_toRightOf="@+id/remen_head"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_11"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/remen_time"
        android:text="刚刚"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/sp_13"
        app:layout_constraintTop_toBottomOf="@id/remen_name"
        app:layout_constraintLeft_toRightOf="@+id/remen_head"
        android:layout_marginLeft="@dimen/dp_15"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/remen_ll"
        android:visibility="gone"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/remen_guanzhu"
        android:background="@mipmap/shequ_icon_sandian_zhankai_bg"
        android:layout_marginTop="@dimen/dp_14"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/remen_bukanta"
            android:text="不看他"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/titleWhite"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/remen_quxiao"
            android:text="取消关注"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/titleWhite"
            android:gravity="center"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/remen_content"
        android:text="比特币老矿工，中国玩客云链克币第一人，关注币姐@区块链币姐带你暴力挖矿！！"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15"
        app:layout_constraintTop_toBottomOf="@+id/remen_head"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_10"
        />

    <ImageView
        android:id="@+id/remen_dandu_iv"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_200"
        android:scaleType="centerCrop"
        android:src="@mipmap/shequ_main_pic_bg_only1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/remen_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_10"
        />



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/remen_line1"
        android:src="@mipmap/shequ_main_line_1"
        app:layout_constraintTop_toBottomOf="@+id/remen_dandu_iv"
        android:layout_marginTop="@dimen/dp_9"
        />


        <ImageView
            android:id="@+id/remen_line10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/shequ_main_line_10"
            app:layout_constraintTop_toBottomOf="@+id/remen_dandu_iv"
            android:layout_marginTop="@dimen/dp_20"
           />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评论"
        android:id="@+id/pinglun_tv"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/hei"
        app:layout_constraintTop_toBottomOf="@id/remen_line10"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_10"
        />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pinglun_et"
            android:hint="写评论..."
            app:layout_constraintTop_toBottomOf="@+id/pinglun_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/pinglun_fasong"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_80"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pinglun_fasong"
            android:text="发送"
            android:textColor="@color/cengse"
            android:textSize="@dimen/sp_15"
            app:layout_constraintStart_toEndOf="@id/pinglun_et"
            app:layout_constraintTop_toBottomOf="@id/pinglun_tv"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pinglun_rv"
        app:layout_constraintTop_toBottomOf="@id/pinglun_et"
        app:layout_constraintLeft_toLeftOf="parent"
        >

    </androidx.recyclerview.widget.RecyclerView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
