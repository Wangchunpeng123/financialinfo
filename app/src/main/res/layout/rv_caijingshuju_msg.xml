<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/rv_iv_guoqi"
        android:layout_width="@dimen/dp_58"
        android:layout_height="@dimen/dp_38"
        android:src="@drawable/guoqi"
        android:layout_marginTop="@dimen/dp_20"/>

    <TextView
        android:id="@+id/rv_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="90.5dp"
        android:layout_marginTop="@dimen/dp_10"
        android:text="德国10月Gfk消费者信心指数"
        android:textColor="#333333"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/rv_tv_neirong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="前值:9.7  预期: 9.7  公布:9.9"
        android:layout_marginLeft="90.5dp"
        android:layout_marginTop="@dimen/dp_38"/>

    <ImageView
        android:id="@+id/rv_iv_star1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/shuju_main_wujiaoxing_hong"
        android:layout_marginTop="@dimen/dp_58"
        android:layout_marginLeft="90.5dp"/>
    <ImageView
        android:id="@+id/rv_iv_star2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/shuju_main_wujiaoxing_hong"
        android:layout_marginTop="@dimen/dp_58"
        android:layout_marginLeft="105dp"/>
    <ImageView
        android:id="@+id/rv_iv_star3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/shuju_main_wujiaoxing_hong"
        android:layout_marginTop="@dimen/dp_58"
        android:layout_marginLeft="119.5dp"/>
    <ImageView
        android:id="@+id/rv_iv_star4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/shuju_main_wujiaoxing_hui"
        android:layout_marginTop="@dimen/dp_58"
        android:layout_marginLeft="134dp"/>
    <ImageView
        android:id="@+id/rv_iv_star5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/shuju_main_wujiaoxing_hui"
        android:layout_marginTop="@dimen/dp_58"
        android:layout_marginLeft="148.5dp"/>
    <TextView
        android:id="@+id/rv_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="11.9dp"
        android:text="时间：14:00"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="@dimen/dp_58"
        android:textSize="11sp"/>

    <ImageButton
        android:id="@+id/rv_btn_yigongbu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="36.5dp"
        android:layout_marginLeft="330dp"
        android:background="@drawable/shape"
        android:src="@mipmap/caijingshuju_btn_yigongbu" />

    <ImageView
        android:id="@+id/rv_iv_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/caijingshuju_line_1"
        android:layout_marginTop="85.5dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>
</RelativeLayout>
