<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/caijing_rv_iv"
        android:layout_width="@dimen/dp_58"
        android:layout_height="@dimen/dp_38"
        android:src="@drawable/guoqi"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        />

    <TextView
        android:id="@+id/caijing_rv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="德国10月Gfk消费者信心指数"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toRightOf="@+id/caijing_rv_iv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_14"/>

    <TextView
        android:id="@+id/caijing_rv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="前值:9.7  预期: 9.7  公布:9.9"
        app:layout_constraintLeft_toRightOf="@+id/caijing_rv_iv"
        app:layout_constraintTop_toBottomOf="@id/caijing_rv_title"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_9"/>

    <ImageView
        android:id="@+id/caijing_rv_xin1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/shuju_main_wujiaoxing_hong"
        app:layout_constraintTop_toBottomOf="@+id/caijing_rv_content"
        app:layout_constraintLeft_toRightOf="@+id/caijing_rv_iv"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_11"/>
    <ImageView
        android:id="@+id/caijing_rv_xin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/shuju_main_wujiaoxing_hong"
        app:layout_constraintTop_toBottomOf="@+id/caijing_rv_content"
        app:layout_constraintLeft_toRightOf="@+id/caijing_rv_xin1"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_2"/>
    <ImageView
        android:id="@+id/caijing_rv_xin3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/shuju_main_wujiaoxing_hong"
        app:layout_constraintTop_toBottomOf="@+id/caijing_rv_content"
        app:layout_constraintLeft_toRightOf="@+id/caijing_rv_xin2"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_2"/>
    <ImageView
        android:id="@+id/caijing_rv_xin4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/shuju_main_wujiaoxing_hong"
        app:layout_constraintTop_toBottomOf="@+id/caijing_rv_content"
        app:layout_constraintLeft_toRightOf="@+id/caijing_rv_xin3"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_2"/>
    <ImageView
        android:id="@+id/caijing_rv_xin5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/shuju_main_wujiaoxing_hong"
        app:layout_constraintTop_toBottomOf="@+id/caijing_rv_content"
        app:layout_constraintLeft_toRightOf="@+id/caijing_rv_xin4"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_2"/>
    <TextView
        android:id="@+id/caijing_rv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间：14:00"
        android:textSize="11sp"
        android:textColor="@color/text_gray"
        app:layout_constraintTop_toBottomOf="@+id/caijing_rv_content"
        app:layout_constraintLeft_toRightOf="@+id/caijing_rv_xin5"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_44"
      />

    <ImageView
        android:id="@+id/caijing_rv_yigongbu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:src="@mipmap/caijingshuju_btn_yigongbu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_37"
        android:layout_marginRight="@dimen/dp_15"
        />

    <ImageView
        android:id="@+id/caijing_rv_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/caijingshuju_line_1"
        app:layout_constraintTop_toBottomOf="@+id/caijing_rv_xin1"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"/>
</androidx.constraintlayout.widget.ConstraintLayout>
