        <TextView
            android:id="@+id/shouye_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:text="首页"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_21"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:scaleType="fitXY"
          android:src="@mipmap/shouye_qiandao_btn"
          android:id="@+id/shouye_qiandao"
          app:layout_constraintTop_toBottomOf="@+id/shouye_fengbao_ll"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          android:layout_marginTop="@dimen/dp_5"
          android:layout_marginLeft="@dimen/dp_20"
          android:layout_marginRight="@dimen/dp_20"
          />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="精选行情"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"
            android:id="@+id/shouye_jingxuan"
            app:layout_constraintTop_toBottomOf="@id/shouye_qiandao"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_5"
            />

          <androidx.recyclerview.widget.RecyclerView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/shouye_rv_jinxuan"
              android:overScrollMode="never"
              android:layout_marginTop="@dimen/dp_3"
              android:layout_marginLeft="@dimen/dp_14"
              android:layout_marginRight="@dimen/dp_14"
              app:layout_constraintTop_toBottomOf="@id/shouye_jingxuan"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"

              />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日热门"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"
            android:id="@+id/shouye_remen"
            app:layout_constraintTop_toBottomOf="@+id/shouye_rv_jinxuan"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_19"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/shouye_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:overScrollMode="never"
            app:layout_constraintTop_toBottomOf="@+id/shouye_remen"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>