<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ShouyeFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_scrollFlags="scroll|enterAlways|snap"
        >


        <ImageView
            android:id="@+id/shouye_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:scaleType="fitXY"
            android:src="@mipmap/pic_shouyebanner"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shouye_tv"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shouye_fengbao_ll"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shouye_iv"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginLeft="@dimen/dp_20"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/shouye_fengbao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_hangyefengbao"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shouye_fengbao_tv"
                android:text="行业风暴"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/black"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shouye_kuaixun_ll"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shouye_iv"
            android:layout_marginTop="@dimen/dp_3"
            android:orientation="vertical"
            android:gravity="center"
            >

        <ImageView
            android:id="@+id/shouye_kuaixun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_shishikuaixun"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shouye_kuaixun_tv"
            android:text="实时快讯"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/black"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shouye_jiaoyisuo_ll"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shouye_iv"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_20"
            android:orientation="vertical"
            android:gravity="center"
            >
        <ImageView
            android:id="@+id/shouye_shuju"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_shishikuaixun"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shouye_jiaoyisuo_tv"
            android:text="交易所公告"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/black"
            />
        </LinearLayout>
