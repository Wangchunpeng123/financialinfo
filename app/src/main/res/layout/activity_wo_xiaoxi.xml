<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.WoXiaoxiActivity">
    <ImageView
        android:id="@+id/fengbao_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/hangyefengbao_top_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/hangyefengbao_jiantou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/hangyefengbao_icon_jiantou"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:padding="@dimen/dp_10"/>


    <TextView
        android:id="@+id/fengbao_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_22"
        android:text="消息通知"
        android:textColor="@color/titleWhite"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/xiaoxi_xitong_cons"
       app:layout_constraintTop_toBottomOf="@+id/fengbao_iv"
       >
       <ImageView
           android:layout_width="@dimen/dp_30"
           android:layout_height="@dimen/dp_30"
           android:id="@+id/xiaoxi_xitong_iv"
           android:src="@mipmap/wo_icon_xiaoxi"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintLeft_toLeftOf="parent"
           android:layout_marginLeft="@dimen/dp_20"
           android:layout_marginTop="@dimen/dp_10"
           android:layout_marginBottom="@dimen/dp_10"
        />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="系统通知"
           android:textSize="@dimen/sp_15"
           android:textColor="@color/black"
           app:layout_constraintLeft_toRightOf="@+id/xiaoxi_xitong_iv"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
           android:layout_marginLeft="@dimen/dp_20"
           />
       <ImageView
           android:layout_width="@dimen/dp_8"
           android:layout_height="@dimen/dp_15"
           android:src="@mipmap/wo_icon_jiantou"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           android:layout_marginRight="@dimen/dp_15"
           />
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:src="@mipmap/wo_line_1"
           android:layout_alignBottom="@+id/fensi_iv"
           app:layout_constraintTop_toBottomOf="@id/xiaoxi_xitong_iv"
           android:layout_marginTop="@dimen/dp_10"
           />
   </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/xiaoxi_hudong_cons"
        app:layout_constraintTop_toBottomOf="@+id/xiaoxi_xitong_cons"
        >
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:id="@+id/xiaoxi_hudong_iv"
            android:src="@mipmap/wo_icon_yuwoxiangguan"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="互动通知"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@+id/xiaoxi_hudong_iv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="@dimen/dp_20"
            />
        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/wo_icon_jiantou"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/dp_15"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/wo_line_1"
            android:layout_alignBottom="@+id/fensi_iv"
            app:layout_constraintTop_toBottomOf="@id/xiaoxi_hudong_iv"
            android:layout_marginTop="@dimen/dp_10"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>