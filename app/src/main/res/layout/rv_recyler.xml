<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:scaleType="fitXY"
            android:id="@+id/recyler_head"
            android:src="@mipmap/icon_yonghuxieyi"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金币"
            android:id="@+id/recyler_name"
            android:textColor="@color/cengse"
            android:textSize="@dimen/sp_15"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/recyler_head"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_20"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/recyler_qianming"
            android:textSize="@dimen/sp_13"
            app:layout_constraintTop_toBottomOf="@+id/recyler_name"
            app:layout_constraintLeft_toRightOf="@+id/recyler_head"
            app:layout_constraintRight_toLeftOf="@+id/recyler_isguanzhu"
            app:layout_constraintBottom_toTopOf="@+id/recyler_line"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recyler_isguanzhu"
            android:src="@mipmap/shequ_icon_yiguanzhu"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="@dimen/dp_10"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_5"
            android:id="@+id/recyler_line"
            android:background="@mipmap/caijingshuju_line_1"
            app:layout_constraintTop_toBottomOf="@+id/recyler_head"
            android:layout_marginTop="@dimen/dp_5"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
