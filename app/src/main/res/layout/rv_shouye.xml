<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_15"
    android:paddingTop="@dimen/dp_15"
    android:background="@drawable/bg_white_gray"
    android:layout_marginBottom="@dimen/dp_10"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:scaleType="fitXY"
        android:id="@+id/rv_shouye_iv"
        android:src="@mipmap/shouye_rv"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/rv_shouye_tv"
        android:textColor="@color/black"
        android:maxLines="3"
        android:textSize="@dimen/sp_15"
        android:text="法国竞争事务监察总署3月16日向苹果公司开出11亿欧元巨额罚单，究竟为何？"
        app:layout_constraintLeft_toRightOf="@id/rv_shouye_iv"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rv_shouye_caijin"
        android:text="财经日报"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/blue"
        app:layout_constraintLeft_toRightOf="@id/rv_shouye_iv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/dp_10"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rv_shouye_riqi"
        android:text="04/14 09:31"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/text_gray"
       app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
