<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".activity.LoginActivity">
    <ImageView
        android:layout_width="@dimen/dp_8"
        android:layout_height="@dimen/dp_15"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/back_iv"
        android:src="@mipmap/denglu_icon_jiantou"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_30"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/denglu_top_bg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录财经资讯"
        android:id="@+id/login_caijin"
        app:layout_constraintTop_toBottomOf="@+id/back_iv"
        android:layout_marginTop="@dimen/dp_50"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_31"
        android:textSize="@dimen/dp_25"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_tv"
        android:text="手机号验证登录后自动创建账户"
        app:layout_constraintTop_toBottomOf="@+id/login_caijin"
        android:layout_marginTop="@dimen/dp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_31"
        android:textSize="@dimen/dp_15"
        android:textColor="@color/gray"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_phong"
        android:text="已发送验证码至"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/login_password_ll"
        android:layout_marginLeft="@dimen/dp_31"
        android:layout_marginBottom="@dimen/dp_7"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_password_ll"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_31"
        android:layout_marginRight="@dimen/dp_31"
        app:layout_constraintTop_toBottomOf="@+id/login_tv"
        android:layout_marginTop="@dimen/dp_72"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/login_86"
            android:text="+86"
            android:visibility="visible"
            android:textSize="@dimen/sp_15"
            />
        <EditText
            android:id="@+id/password"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:hint="请输入手机号"
            android:inputType="number"
            android:background="@null"
            />
    </LinearLayout>

    <View
        android:id="@+id/login_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_35"
        android:background="@drawable/bg_dotted_line"
        android:layerType="software"
        app:layout_constraintTop_toBottomOf="@+id/login_password_ll"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_ok"
        app:layout_constraintTop_toBottomOf="@+id/login_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_35"
        android:src="@mipmap/denglu_btn_yanzhengma"
        android:contentDescription="@null"
        style="?android:attr/borderlessButtonStyle"
        />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:indeterminateDrawable="@drawable/loading_progressbar"
        android:visibility="gone"
        android:id="@+id/login_progress"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_try"
        app:layout_constraintTop_toBottomOf="@id/login_ok"
        app:layout_constraintRight_toRightOf="parent"
        android:text="重新发送验证码"
        android:layout_marginRight="@dimen/dp_27"
        android:textColor="@color/blue"
        android:visibility="gone"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_miao"
        app:layout_constraintTop_toBottomOf="@id/login_try"
        app:layout_constraintRight_toRightOf="parent"
        android:text="58s后重新获取"
        android:visibility="gone"
        android:layout_marginRight="@dimen/dp_27"
        android:layout_marginTop="@dimen/dp_10"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_other"
        android:text="其它登录方式"
        android:textSize="@dimen/sp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/login_weixin"
        android:layout_marginBottom="@dimen/dp_1"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_weixin"
        android:src="@mipmap/denglu_icon_weixin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintBottom_toTopOf="@+id/login_xieyi"
        android:layout_marginBottom="@dimen/dp_20"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_qq"
        android:src="@mipmap/denglu_icon_qq"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/login_xieyi"
        android:layout_marginBottom="@dimen/dp_20"
        app:layout_constraintHorizontal_bias="0.7"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_xieyi"
        android:text="登录表示同意该软件服务协议、隐私政策"
        android:textSize="@dimen/sp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="@dimen/dp_20"
        android:textColor="@color/gray"
        />

</androidx.constraintlayout.widget.ConstraintLayout>