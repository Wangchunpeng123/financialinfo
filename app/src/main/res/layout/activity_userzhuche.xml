<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".activity.LoginActivity">
    <ImageView
        android:layout_width="@dimen/dp_8"
        android:layout_height="@dimen/dp_15"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/back_iv"
        android:src="@mipmap/denglu_icon_jiantou"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_30"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/denglu_top_bg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欢迎注册"
        android:id="@+id/login_caijin"
        app:layout_constraintTop_toBottomOf="@+id/back_iv"
        android:layout_marginTop="@dimen/dp_50"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_31"
        android:textSize="@dimen/dp_25"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_phong"
        android:text="Hello，欢迎您的到来！"
        android:textSize="@dimen/sp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_caijin"
        android:layout_marginLeft="@dimen/dp_31"
       android:layout_marginTop="@dimen/dp_14"
        />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/login_phong_tv"
            android:text="手 机 号"
            android:visibility="visible"
            android:textSize="@dimen/sp_15"

            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dp_31"
            android:layout_marginRight="@dimen/dp_31"
            app:layout_constraintTop_toBottomOf="@+id/login_caijin"
            android:layout_marginTop="@dimen/dp_72"
            />
        <EditText
            android:id="@+id/login_phone"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:hint="请输入手机号"
            android:maxLength="11"
            android:inputType="number"
            android:background="@null"
            app:layout_constraintLeft_toRightOf="@id/login_phong_tv"
            app:layout_constraintTop_toBottomOf="@+id/login_caijin"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_72"
            />


    <View
        android:id="@+id/login_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_35"
        android:background="@drawable/bg_dotted_line"
        android:layerType="software"
        app:layout_constraintTop_toBottomOf="@+id/login_phong_tv"
        />

    <ImageButton
        android:id="@+id/login_login1"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="232dp"
        android:contentDescription="@null"
        android:src="@mipmap/denglu_btn_denglu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_line" />




    <EditText
        android:id="@+id/password"
        android:layout_width="@dimen/dp_100"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:hint="请输入验证码"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_line"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/yanzhengma_et"
        android:layout_width="@dimen/dp_220"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@null"
        android:hint="请输入密码"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_line1"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/login_line1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/bg_dotted_line"
        android:layerType="software"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_35"/>

    <View
        android:id="@+id/login_line2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_35"
        android:background="@drawable/bg_dotted_line"
        android:layerType="software"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yanzhengma_et" />



</androidx.constraintlayout.widget.ConstraintLayout>