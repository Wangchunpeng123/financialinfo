<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    android:background="@color/titleWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <FrameLayout
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:id="@+id/remen_head"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/dp_11"
            >

            <ImageView
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:scaleType="fitXY"
            android:id="@+id/remen_touxiang"
                android:src="@mipmap/pic_morentouxiang"
            />
            <ImageView
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:scaleType="fitXY"
                android:src="@mipmap/shequ_icon_touxiang_bg"
                />
        </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/remen_name"
        android:text="区块链币姐"
        android:textColor="@color/cengse_remen"
        android:textSize="@dimen/sp_15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/remen_head"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_11"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/remen_time"
        android:text="刚刚"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/sp_13"
        app:layout_constraintTop_toBottomOf="@+id/remen_name"
        app:layout_constraintLeft_toRightOf="@+id/remen_head"
        android:layout_marginLeft="@dimen/dp_15"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/remen_ll"
        android:visibility="gone"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/remen_guanzhu"
        android:background="@mipmap/shequ_icon_sandian_zhankai_bg"
        android:layout_marginTop="@dimen/dp_14"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/remen_bukanta"
            android:text="不看他"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/titleWhite"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/remen_quxiao"
            android:text="取消关注"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/titleWhite"
            android:gravity="center"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_20"
        android:scaleType="centerInside"
        android:id="@+id/remen_guanzhu"
        android:src="@mipmap/shequ_btn_guanzhu"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_14"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/remen_content"
        android:text="比特币老矿工，中国玩客云链克币第一人，关注币姐@区块链币姐带你暴力挖矿！！"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15"
        app:layout_constraintTop_toBottomOf="@+id/remen_head"
        android:layout_marginTop="@dimen/dp_8"
        />

    <ImageView
        android:id="@+id/remen_dandu_iv"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_200"
        android:scaleType="centerCrop"
        android:src="@mipmap/shequ_main_pic_bg_only1"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/remen_content"
        android:layout_marginTop="@dimen/dp_5"
        />



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/remen_line1"
        android:src="@mipmap/shequ_main_line_1"
        app:layout_constraintTop_toBottomOf="@+id/remen_dandu_iv"
        android:layout_marginTop="@dimen/dp_9"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/remen_date"
            android:text="2020/03/18"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp_13"
            app:layout_constraintTop_toBottomOf="@+id/remen_line1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/dp_12"
            />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/remen_dianzan_ll"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/remen_line1"
        android:layout_marginTop="@dimen/dp_12">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/remen_dianzan_iv"
            android:src="@mipmap/shequ_icon_zan1"
            app:layout_constraintRight_toLeftOf="@+id/remen_dianzan_tv"
            app:layout_constraintTop_toBottomOf="@+id/remen_line1"
            android:layout_marginRight="@dimen/dp_3"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/remen_dianzan_tv"
            android:text="2.1w"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp_13"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/remen_pinlun_ll"
            app:layout_constraintRight_toLeftOf="@id/remen_dianzan_ll"
            app:layout_constraintTop_toBottomOf="@+id/remen_line1"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_12">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/remen_pinlun_iv"
                android:src="@mipmap/shequ_icon_pinglun"
                android:layout_marginRight="@dimen/dp_3"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/remen_pinlun_tv"
                android:text="1.3w"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/sp_13"
                />
        </LinearLayout>



